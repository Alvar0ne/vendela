<div class='col-sm-6 col-lg-4'>
  <div class="card">
    <div class="card-topper" ><%= image_tag publication.image.url(:medium)%></div>


    <div class="card-block">
      <h4 class="card-title"><%= link_to publication.titulo, publication %></h4>
     
      <p class="card-text"><%= truncate(publication.descripcion, length: 130) %></p>
      <%= link_to 'Read', publication, class: 'btn btn-primary' %>
    </div>
  </div>
</div>


